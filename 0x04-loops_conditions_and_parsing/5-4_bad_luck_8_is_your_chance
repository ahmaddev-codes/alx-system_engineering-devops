4-if_9_say_hi
4-if_9_say_hi
#!/usr/bin/env bash
# A bash script that loops from 1 to 10
#+ displays bad luck for the 4th loop iteration
#+ displays good luck for the 8th loop iteration
#+ displays Best School for the other iterations

start=1
stop=10
while [ "$start" -le "$stop" ]; do
	if [ "$start" -eq 4 ]; then
		echo "bad luck"
		((start++))
	elif [ "$start" -eq 8 ]; then
		echo "good luck"
		((start++))
	else
		echo "Best school"
        	((start++))
	fi
done
